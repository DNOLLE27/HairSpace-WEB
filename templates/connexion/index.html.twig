{% extends 'base.html.twig' %}

{% block title %}HairSpace - Connexion{% endblock %}

{% block body %}

<link href="../assets/style-inscrico.css" rel="stylesheet"/>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="box">
    </br>
    <p class="titreCo"> Connectez vous </p>

    {{ form_start(ConnexionType) }}
        <table class="table-connexion">
            <tr>
                <th>Identifiant :</th>
            </tr>
            <tr>
                <td>{{ form_widget(ConnexionType.conx_identifiant) }}</td>
            </tr>
            <tr>
                <th>Mot de passe :</th>
            </tr>
            <tr>
                <td>{{ form_widget(ConnexionType.conx_mdp) }}</td>
            </tr>
            <tr>
                <td><button type="submit">Se connecter</button></td>
            </tr>
        </table>
        {{ form_rest(ConnexionType) }}
    {{ form_end(ConnexionType) }}

    {% for message in app.flashes('success') %}
        <div class="message-envoye"><p>{{ message }}</p></div>
    {% endfor %}

    {% if msgErreurCo != "" %}
        <p class="msg-erreurCo">{{ msgErreurCo }}</p>
    {% endif %}

    <a class="inscriptionLien" href="{{ path('app_inscription') }}" class="btn">Inscrivez vous !</a>
</div>

{% endblock %}
