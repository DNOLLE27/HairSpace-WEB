{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionController!{% endblock %}

{% block body %}

<link href="../assets/style-fix.css" rel="stylesheet"/>
<link href="../assets/style-inscrico.css" rel="stylesheet"/>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="box">
    </br>
    <p class="titreInsc"> Inscrivez vous </p>
        
    {{ form_start(formUtilisateur) }}
    {{ form_widget(formUtilisateur.utl_identifiant) }}
    {{ form_widget(formUtilisateur.utl_email) }}
    {{ form_widget(formUtilisateur.utl_mdp) }}
    <button type="submit" class="btn btn-secondary btnConnectI ">Se connecter</button> 
    {{ form_end(formUtilisateur) }}
    
    <a class="connexionLien" href="{{ path('app_inscription')}}" class="btn">Connectez vous !</a>   
</div>
{% endblock %}
